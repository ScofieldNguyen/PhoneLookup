<script>
    //#region Đánh giá trang search

    var gl_submitReview = false;
    function submitReview() {
        if (gl_submitReview)
            return false;
        gl_submitReview = true;
        var form = $('.order-review form');
        $.ajax({
            type: "POST",
            cache: false,
            data: form.serialize(),
            url: "/aj/Common/SubmitContentReview",
            beforeSend: function () {
                BeforeSendAjax();
            },
            success: function (e) {
                gl_submitReview = false;
                if (e.res != 1) {
                    alert(e.mes);
                    $('.order-review .reason').hide();
                }
                else {
                    $('.order-review form').remove();
                    $('.order-review .thank').show();
                }
                EndSendAjax();
            },
            error: function (err) {
                gl_submitReview = false;
                $('#Tnote').val('');
                alert("Vui lòng nhập đúng dữ liệu đánh giá");
            }
        });
    }

    function chooseReview(t) {
        $('.order-review .right a').removeClass('act');
        $(t).addClass('act');
        if ($(t).data('val') == 'good') {
            $('input[name=rs_type]').val(1);
            $('.reason textarea').attr('placeholder', $('#fGender').val().trim() + ' ' + $('#fname').val().trim() + ' có góp ý gì thêm không? (không bắt buộc)');
            $('.reason').removeClass('bd');
            $('.reason').show();
        }
        else {
            $('input[name=rs_type]').val(2);
            $('.reason textarea').attr('placeholder', 'Điều gì khiến ' + $('#fGender').val().trim() + ' ' + $('#fname').val().trim() + ' không hài lòng? (không bắt buộc)');
            $('.reason').addClass('bd');
            $('.reason').show();
        }
    }
//#endregion
</script>
            
