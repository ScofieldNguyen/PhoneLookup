';position:absolute;bottom:99%;right:270px;width:0;height:0;border-bottom:10px solid #ddd;border-left:10px solid transparent;border-right:10px solid transparent}.order-review .reason.bd:before,.order-review .reason.bd:after{right:140px}.order-review .reason:after{border-width:9px;margin-right:1px;border-bottom-color:#fff}.order-review .reason a{color:#fd6e1d;font-size:12px;padding:7px 10px;display:inline-block;background:#f6f6f6;position:absolute;right:40px;bottom:10px}.order-review .thank{display:none;font-weight:bold;font-size:16px;text-align:center;padding:30px 0;color:#4b64a7;background:#eee}[class^="icondmx-"],[class*="icondmx-"]{background:url(https://cdn.tgdd.vn/dmx2016/Content/images/V2/cart/iconcartmobile@2x.v201904141540.png) no-repeat;background-size:173px 110px;vertical-align:middle;display:inline-block}.icondmx-good{background-size:346px 220px;background-position:-52px -180px;width:40px;height:40px}.icondmx-bad{background-size:346px 220px;background-position:0 -180px;width:40px;height:40px}.listsearch li .shockprice{display:inline-block;color:#fff;background:#3fb846;border-radius:2px;padding:2px 5px 0 5px;height:18px}.report_text label.newProduct{margin-left:10px}.report_text label{margin-right:20px;cursor:pointer}.report_text label a:visited{color:#333}.report_text label a{color:#333}.report_text label .iconmobile-opt{background-position:-380px -30px;width:16px;height:16px;vertical-align:sub}.report_text label.choose .iconmobile-opt{background-position:-400px -30px}.listsearch li h6.textOLOL{color:#d0021b}.wrap-suggestion li a h6.textOLOL{color:#d0021b}
